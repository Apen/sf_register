    390 = submit
  }

  # default selected fields for edit controller
  editDefaultSelected {
    90 = title
    100 = clear

    110 = firstName
    120 = lastName
    130 = company
    140 = clear

    145 = email
    150 = telephone
    160 = mobilephone
    170 = fax
    190 = clear

    200 = address
    210 = zip
    220 = city
    230 = country
    240 = zone
    250 = language
    260 = clear

    300 = image
    310 = clear

    390 = submit
  }

  configuration {
    username.partial = Textfield

    pseudonym.partial = Textfield

    password {
      partial = Password
      progress = show
    }

    passwordRepeat.partial = Password

    email.partial = Textfield

    emailRepeat.partial = Textfield

    clear.partial = Clear

    gender {
      partial = Select
      values {
        1 = gender_male
        2 = gender_female
      }
    }

    title {
      partial = Select
      values {
        none = title_none
        dr = title_dr
        prof = title_prof
        profdr = title_profdr
      }
    }

    firstName.partial = Textfield

    lastName.partial = Textfield

    company.partial = Textfield

    telephone.partial = Textfield

    mobilephone.partial = Textfield

    fax.partial = Textfield

    address.partial = Textfield

    zip.partial = Textfield

    city.partial = Textfield

    country {
      partial = CountrySelect
      defaultValue = DE
      allowedCountries {
        0 = DE
        1 = AT
      }
    }

    zone {
      partial = CountryZoneSelect
      defaultValue = DE
    }

    language.partial = Language

    timezone.partial = Timezone

    daylight.partial = Checkbox

    image.partial = Upload

    dateOfBirth.partial = DateSelect

    gtc.partial = Checkbox

    privacy.partial = Checkbox

    captcha {
      partial = Captcha
      type = Recaptcha
    }

    submit.partial = Submit
  }
}
